show tables;

create table Employee(
	EmpNo 	int 		primary key auto_increment,
	EmpName varchar(30) not null unique,
	Dept 	varchar(20) not null,
	HireDate date 		not null,
	Salary 	int 		check(Salary >= 2000000)
);

select * from Employee;
delete from Employee;
-- ---------------------------------------------------------------
-- (1) 사원 등록: Employee 테이블에 다음 데이터를 삽입하시오.
insert into Employee(EmpName, Dept, HireDate, Salary) values('홍길동', '영업부', '2020-03-01', 2500000);
insert into Employee(EmpName, Dept, HireDate, Salary) values('이순신', '인사부', '2019-07-15', 3200000);
insert into Employee(EmpName, Dept, HireDate, Salary) values('강감찬', '개발부', '2021-01-10', 2800000);

-- (2) 부서가 '개발부'인 사원의 사번, 이름, 급여를 조회하시오.
select *
from Employee
where Dept = '개발부';

select EmpName, Dept
from Employee
where Dept = '개발부';

-- (2)-2 급여가 3,000,000원 이상인 사원의 이름과 부서를 조회하시오.
select *
from Employee
where Salary >= 3000000;

select EmpName, Dept
from Employee
where Salary >= 3000000;


-- (3) 이순신의 급여를 3,500,000원으로 수정하시오.


-- (4) 사번이 1번인 사원의 정보를 삭제하시오.